<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Puppy Eyes Adoption Centre</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding-top: 0px;">
	<nav class="navbar navbar-expand-lg navbar-light bg-light">
		<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarNavAltMarkup">
			<div class="navbar-nav">
				<li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
				<li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Pets")">Pets</a></li>
				<li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Categories")">Categories</a></li>
				<li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Customers")">Customers</a></li>
				<li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Sales")">Sales</a></li>
			</div>
		</div>
	</nav>
	<div class="container body-content">
		<table style="
			border: 0px;
			width: 100%">
			<tr>
				<td>
					<img src="~/Images/puppy eyes.jpg" alt="site logo" height="150" style="margin-right: 10px" />
				</td>
				<td style="width: 100%">
					<h2>Puppy Eyes Adoption Centre</h2>
					<h4>@ViewBag.Title</h4>
				</td>
			</tr>
		</table>
		@RenderBody()
		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year - V.G.</p>
		</footer>
	</div>

		@Scripts.Render("~/bundles/jquery")
		@Scripts.Render("~/bundles/bootstrap")
		@RenderSection("scripts", required: false)
</body>
</html>
